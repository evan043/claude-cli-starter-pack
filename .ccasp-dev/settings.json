{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "$comment": "CCASP DEVELOPMENT SETTINGS - These hooks are for developing CCASP itself, not for user projects",
  "permissions": {
    "allow": [],
    "deny": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .ccasp-dev/hooks/ccasp-update-check.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .ccasp-dev/hooks/ccasp-auto-build.js"
          }
        ]
      }
    ]
  }
}
