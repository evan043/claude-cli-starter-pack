{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CCASP Phase Progress",
  "description": "Schema for PROGRESS.json files tracking phase-dev-plan execution state",
  "type": "object",
  "required": ["plan_id", "phase_id", "project_name", "status", "phases"],
  "properties": {
    "plan_id": {
      "type": "string",
      "description": "Unique identifier for this phase-dev-plan"
    },
    "phase_id": {
      "type": "string",
      "description": "Current active phase ID"
    },
    "roadmap_id": {
      "type": "string",
      "description": "Parent roadmap identifier (optional)"
    },
    "project_name": {
      "type": "string",
      "description": "Human-readable project name"
    },
    "scale": {
      "type": "string",
      "enum": ["S", "M", "L"],
      "description": "Project scale: Small (S), Medium (M), or Large (L)"
    },
    "target_success": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Target success rate (0-1)"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "active", "completed", "failed", "paused"],
      "description": "Current execution status"
    },
    "github_issue": {
      "type": ["integer", "null"],
      "description": "Linked GitHub issue number (if applicable)"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when plan was created"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last update"
    },
    "completion_percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Overall completion percentage"
    },
    "agent_assignments": {
      "type": "object",
      "properties": {
        "suggested": {
          "type": "array",
          "items": { "type": "string" }
        },
        "current": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "phases": {
      "type": "array",
      "description": "Array of phases in this plan",
      "items": {
        "type": "object",
        "required": ["id", "name", "status", "tasks"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Numeric phase ID"
          },
          "name": {
            "type": "string",
            "description": "Phase name"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "active", "completed", "failed", "paused"],
            "description": "Phase execution status"
          },
          "tasks": {
            "type": "array",
            "description": "Tasks within this phase",
            "items": {
              "type": "object",
              "required": ["id", "description", "completed"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Task identifier (e.g., '1.1', '1.2')"
                },
                "description": {
                  "type": "string",
                  "description": "Task description"
                },
                "completed": {
                  "type": "boolean",
                  "description": "Whether task is completed"
                },
                "agent": {
                  "type": "string",
                  "description": "Assigned agent (optional)"
                },
                "task_type": {
                  "type": "string",
                  "enum": ["implementation", "system", "orchestration", "validation", "testing"],
                  "default": "implementation",
                  "description": "Task category. system/orchestration tasks are auto-injected gate/compacting steps"
                },
                "run_in_background": {
                  "type": "boolean",
                  "default": false,
                  "description": "Whether this task should run as a background agent"
                },
                "batch_group": {
                  "type": ["string", "null"],
                  "description": "Batch identifier for parallel execution grouping"
                }
              }
            }
          },
          "success_criteria": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Success criteria for this phase"
          }
        }
      }
    },
    "testing_config": {
      "type": "object",
      "properties": {
        "test_command": {
          "type": "string",
          "description": "Command to run tests"
        },
        "ralph_loop": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "maxIterations": { "type": "integer" }
          }
        }
      }
    },
    "orchestration": {
      "type": "object",
      "description": "Embedded orchestration directives for parallel agent execution, batching, and compacting",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["sequential", "parallel"],
          "default": "parallel",
          "description": "Execution mode for tasks within phases"
        },
        "max_parallel_agents": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4,
          "default": 2,
          "description": "Max concurrent background agents per batch"
        },
        "batch_strategy": {
          "type": "string",
          "enum": ["no_file_overlap", "dependency_order", "domain_isolation"],
          "default": "no_file_overlap",
          "description": "How to batch tasks for parallel execution"
        },
        "compact_threshold_percent": {
          "type": "integer",
          "minimum": 20,
          "maximum": 60,
          "default": 40,
          "description": "Compact when remaining context drops below this percentage"
        },
        "poll_interval_seconds": {
          "type": "integer",
          "minimum": 60,
          "maximum": 300,
          "default": 120,
          "description": "Seconds between polling background agents"
        },
        "compact_after_launch": {
          "type": "boolean",
          "default": true,
          "description": "Compact immediately after launching background agents"
        },
        "compact_after_poll": {
          "type": "boolean",
          "default": true,
          "description": "Compact after every poll cycle"
        },
        "agent_model": {
          "type": "string",
          "enum": ["haiku", "sonnet", "opus"],
          "default": "sonnet",
          "description": "Default model for spawned agents"
        }
      }
    }
  }
}
